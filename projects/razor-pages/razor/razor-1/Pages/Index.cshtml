@page
<html>
    <body>
        <h1>Markup in @@functions</h1>
        @{ Say("Hello World"); }
        <br/>
        @{ Calculate(Enumerable.Range(1, 10));}
    </body>
</html>

@functions
{
    void Say(string message)
    {
        <div><strong>@message</strong></div>
    }

    void Calculate(IEnumerable<int> numbers)
    {
        foreach(var b in numbers)
        {
            Say(b + "");
        }
    }
}