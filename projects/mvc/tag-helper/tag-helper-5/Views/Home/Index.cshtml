@addTagHelper *, TagHelpers

<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <alert>
        Info Alert
        <img src="https://api.thecatapi.com/v1/images/search?format=src&mime_types=image/gif" />
    </alert>

    <danger>
        <alert>
            Danger Alert
            <img src="https://api.thecatapi.com/v1/images/search?format=src&mime_types=image/gif" />
        </alert>
    </danger>
    <warning>
        <alert>
            You can pass data from 'parent' tag to child tag. Unfortunately you cannot pass data from child tag to
            parent.
        </alert>
    </warning>
</body>

</html>