@page "/"

<h1>Component parameter passing behavior</h1>

<All 
    name="annie" 
    age=33 
    Height=175 
    is-working=true 
    ride-bike=@CanRideBike
    dob=DateOfBirth 
    graduation-date=@DateOfGraduation 
    publication-date="@DateOfPublication" 
    can-fly=@CanFly 
    can-swim="@CanSwim"
