    public bool CanSwim {get; set;} = true;

    public int IQ = 200;

    public List<string> FavoriteColors { get; set; } = new List<string>() { "red", "green" };

    const int CourageStats = 90;

    public int HumorStats { get; set; } = 99;

    public int CalmnessStats {get; set; } = 55;
}
